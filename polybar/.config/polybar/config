regular09      = #f99157
regular0A      = #ffcc66
regular0B      = #99cc99
regular0C      = #66cccc
regular0D      = #6699cc
regular0E      = #cc99cc
regular0F      = #d27b53

dark00         = #1c1c1c
dark01         = #282828
dark02         = #404040
dark03         = #636258
dark04         = #908f82
dark05         = #c2c0b7
